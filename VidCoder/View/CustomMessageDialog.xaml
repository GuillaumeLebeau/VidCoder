<Window
	x:Class="VidCoder.View.CustomMessageDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:VidCoder.View"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="{Binding Title}"
	Width="377"
	Height="186"
	Background="WhiteSmoke"
	ResizeMode="NoResize"
	TextOptions.TextFormattingMode="Display"
	WindowStartupLocation="CenterOwner"
	mc:Ignorable="d">
	<Grid>
		<TextBlock
			Margin="12 12 12 48"
			VerticalAlignment="Stretch"
			Text="{Binding Message}"
			TextWrapping="Wrap" />

		<ItemsControl ItemsSource="{Binding Buttons}" Margin="0 0 12 12" HorizontalAlignment="Right" VerticalAlignment="Bottom">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button
						Height="23"
						MinWidth="75"
						Margin="6 0 0 0"
						Command="{Binding Choose}"
						Content="{Binding Display}"
						IsCancel="{Binding IsCancel}"
						IsDefault="{Binding IsDefault}"
						Padding="6 0" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</Grid>
</Window>
